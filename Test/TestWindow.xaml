<Window x:Class="XP.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:test="clr-namespace:XP.Test"
        xmlns:xp="clr-namespace:XP"
        xmlns:ef="clr-namespace:XP.Effects"
        xmlns:sp="clr-namespace:XP.Sprites"
        Title="TestWindow" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded" FontFamily="黑体" FontSize="22" Foreground="White">
    
    <Window.Resources>
        <Storyboard x:Key="story"/>
    </Window.Resources>
    <Grid Width="640" Height="480" Background="White" Name="grid">
        <Image Source="../girl.png" Width="256">
            <Image.Effect>
                <ef:ToneEffect Color="Green"/>
            </Image.Effect>
        </Image>
    </Grid>
</Window>
