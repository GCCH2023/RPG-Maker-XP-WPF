<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="ListBox" x:Key="CommanWindow">
        <Setter Property="FontFamily" Value="黑体"/>
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="White"/>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderThickness="2" CornerRadius="2">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="White" Opacity="0.6"/>
                        </Border.BorderBrush>
                        <Border.Background>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0,0" Opacity="0.6">
                                <GradientStop Color="#FF696BBD" Offset="0"/>
                                <GradientStop Color="#B2333463" Offset="0.5"/>
                                <GradientStop Color="#FF333463" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel Margin="16" Background="Transparent">
                            <ItemsPresenter/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>