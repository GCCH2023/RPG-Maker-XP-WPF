<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cvt="clr-namespace:XP.Converters">

    <cvt:BoolVisibilityConverter x:Key="BoolVisibilityConverter"/>

    <Style TargetType="Border" x:Key="WindowBackground">
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Border.BorderBrush" Value="White"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0" Opacity="0.6">
                    <GradientStop Color="#FF696BBD" Offset="0"/>
                    <GradientStop Color="#B2333463" Offset="0.5"/>
                    <GradientStop Color="#FF333463" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
